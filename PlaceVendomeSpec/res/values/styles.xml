<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	<style name="PopupTheme" parent="android:Theme.Holo.Dialog">
    <item name="android:windowIsFloating">false</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
    <item name="android:windowActionModeOverlay">false</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:textSize">24sp</item>
</style>
	<style name="PopupThemeWhite" parent="android:Theme.Holo.Light.Dialog">
    <item name="android:windowIsFloating">false</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
    <item name="android:windowActionModeOverlay">true</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:textSize">24sp</item>
    <item name="android:actionBarStyle">@style/MyActionBar</item>
	    
</style>
    
	
	
<style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
    <item name="android:background">#FFFFFF</item>
	<item name="android:titleTextStyle">@style/textStyle</item>

</style>
<style name="textStyle" parent="@android:style/TextAppearance.Large">
	<item name="android:textSize">30sp</item>
</style>

<style name="resultados" parent="@android:style/Theme.Holo.Light.DarkActionBar">
    <item name="actionModeStyle" >@style/modActionMode</item>
    <item name="actionModeCloseButtonStyle">@style/modActionModeButton</item>
    
</style>

<style name="modActionMode" parent="@android:style/Widget.Holo.Light.ActionMode.Inverse">
    <item name="android:background">#000000</item>
</style>

<style name="modActionModeButton" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
    <item name="android:text">Close</item>
    
</style>
    
</resources>



